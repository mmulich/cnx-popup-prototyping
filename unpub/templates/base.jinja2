<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  {% block head %}
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{% block head_title %}Connexions Authoring Services{%
  endblock %}</title>
  <meta name="description" content="">
  <meta name="author" content="">

  {% block _css %}
  <!-- Bootstrap -->
  <link href="/static/css/bootstrap.min.css" rel="stylesheet">
  <link href="/static/css/bootstrap-responsive.min.css" rel="stylesheet">

  <!-- Custom -->
  <link rel="stylesheet" href="/static/css/style.css">
  <link rel="stylesheet" href="/static/css/custom.css">
  {% endblock %}  
  {% block css %}
  {% endblock %}

  {% block _js %}
  {# _js is a private block only to be used when necessary, all other
     js should be loaded at the end of the file in the 'js' block
   #}
  <script src="/static/js/libs/modernizr-2.5.3.min.js"></script>
  {% endblock %}

  {% endblock %}{# END head block #}
</head>
<body>
  {% block body %}
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a href="/" class="brand">Connexions</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li><a href="/support">Support</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

  <div role="main" class="container-fluid">
    <div class="row-fluid">
      {% block main %}{% endblock %}
    </div><!-- /row -->
  </div><!-- /container -->


  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  <script>window.jQuery ||
  document.write('<script src="/static/js/libs/jquery-1.7.2.min.js"><\/script>')</script>

  <!-- Bootstrap -->
  <script src="/static/js/libs/bootstrap.min.js"></script>

  <!-- Application wide JavaScript -->
  <script src="/static/js/plugins.js"></script>
  <script src="/static/js/script.js"></script>

  {% block js %}
  {# Use this area to include page specific js #}
  {% endblock %}
  <!-- end scripts-->

  {% endblock %}{# END body block #}
</body>
</html>
